<!DOCTYPE html>

@{
    ViewBag.Title = "Registration Form";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>


<html>
<body>
    <form name="Reg" onsubmit="return validateForm()" action="Summary" method="post">
            First name:<br>
            <input type="text" name="FirstName" value="Valued">
            <br><br>
            Last name:<br>
            <input type="text" name="lastname" value="Customer">
            <br><br>
            Email address:<br>
            <input type="text" name="Email" value="Customer@somewhere.com">
            <br><br>
            Phone number:<br>
            <input type="text" name="phone" value="1234567890">
            <br><br>
            Password:<br>
            <input type="text" name="password" value="******">
            <br><br>
            <input type="submit" value="Register">
            <br>
        </form>

        @*<p>If you click the "Register" button, you will be redirected to the Login page".</p>*@

</body>
</html>

